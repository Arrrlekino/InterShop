<h2>Hello</h2>
<div class="row">
	<% @products.each do |p| %>
<div class="col-md-3">
	<div>
		<%= p.title %>
	</div>	
	<div>
		<img src="<%= p.path_to_image %>"/>
	</div>	
	<div>
		<%= p.description %>
	</div>
	<div>
		Price: <%= p.price %> usd
	</div>
	<div>
		Size: <%= p.size %> sm
	</div>
	<div>
		<button class="btn btn-sm btn-success">Buy!</button>
	</div>
	</div>
<% end %>

</div>	
<br />
<button class="btn btn-primary" onclick="something()">Click here!</button>
